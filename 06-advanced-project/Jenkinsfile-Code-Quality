pipeline {
    agent any
    stages {
        stage('Environment Variables') {
            steps {
                sh 'printenv'
                sh 'ls -la'
            }
        }

        stage('Pull Request Number') {
            when {
                changeRequest target: 'main'
            }
            steps {
                echo "PR: ${CHANGE_ID}"
            }
        }            

        stage('Setup') {
            steps {
                sh '''
                    export PATH=$HOME/.local/bin:$PATH
                    poetry install --with dev
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                    export PATH=$HOME/.local/bin:$PATH
                    poetry run pytest
                '''
            }
        }    
    }
}
