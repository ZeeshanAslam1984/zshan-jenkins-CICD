pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup') {
            steps {
                dir('06-advanced-project') {
                    // Use full path to Poetry
                    sh '/var/lib/jenkins/.local/share/pypoetry/venv/bin/poetry install --with dev'
                }
            }
        }

        stage('Test') {
            steps {
                dir('06-advanced-project') {
                    // Use full path again for pytest
                    sh '/var/lib/jenkins/.local/share/pypoetry/venv/bin/poetry run pytest'
                }
            }
        }
    }
}
