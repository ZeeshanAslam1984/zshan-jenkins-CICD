pipeline {
    agent any
    environment {
        // Add Poetry's bin directory to PATH safely
        PATH+EXTRA = "/var/lib/jenkins/.local/bin"
    }
    stages {
        stage('Setup') {
            steps {
                dir('06-advanced-project') {
                    sh 'poetry install --with dev'
                }
            }
        }

        stage('Test') {
            steps {
                dir('06-advanced-project') {
                    sh 'poetry run pytest'
                }
            }
        }
    }
}
