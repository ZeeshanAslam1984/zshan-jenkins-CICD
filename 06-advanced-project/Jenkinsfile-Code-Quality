pipeline {
    agent any

    environment {
        // Add Poetry path so Jenkins can find it
        PATH = "/var/lib/jenkins/.local/share/pypoetry/venv/bin:$PATH"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup') {
            steps {
                dir('06-advanced-project') {
                    sh 'poetry install --with dev'
                }
            }
        }

        stage('Test') {
            steps {
                dir('06-advanced-project') {
                    sh 'poetry run pytest'
                }
            }
        }
    }
}
