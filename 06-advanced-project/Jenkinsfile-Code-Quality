pipeline {
    agent any

    environment {
        // Use PATH+EXTRA to avoid JENKINS-41339 warnings
        PATH+POETRY = "/var/lib/jenkins/.local/share/pypoetry/venv/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                // Ensure correct Git checkout
                checkout scm
            }
        }

        stage('Setup') {
            steps {
                // Go into the folder containing pyproject.toml
                dir('06-advanced-project') {
                    sh 'poetry install --with dev'
                }
            }
        }

        stage('Test') {
            steps {
                dir('06-advanced-project') {
                    sh 'poetry run pytest'
                }
            }
        }
    }
}
