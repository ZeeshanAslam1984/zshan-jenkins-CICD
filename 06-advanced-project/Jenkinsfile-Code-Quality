pipeline {
    agent any
    stages {
        stage('environment variables') {
            steps {
                sh 'printenv'
                sh 'ls -la'
            }
        }

        stage('Pull Request Number') {
            when {
                changeRequest target: 'main'
            }
            steps {
                echo "PR: ${CHANGE_ID}"
            }
        }

        stage('Setup') {
            steps {
                dir('06-advanced-project') {
                    sh '''
                        export PATH=$HOME/.local/bin:$PATH
                        poetry install --with dev
                    '''
                }
            }
        }

        stage('Test') {
            steps {
                dir('06-advanced-project') {
                    sh '''
                        export PATH=$HOME/.local/bin:$PATH
                        poetry run pytest
                    '''
                }
            }
        }
    }
}
