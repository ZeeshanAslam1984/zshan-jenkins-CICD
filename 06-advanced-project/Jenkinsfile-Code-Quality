pipeline {
    agent any

    environment {
        // Keep this in case other tools rely on PATH
        PATH = "/var/lib/jenkins/.local/bin:$PATH"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup') {
            steps {
                dir('06-advanced-project') {
                    // Use a login shell to load Poetry from ~/.local/bin
                    sh 'bash -l -c "poetry install --with dev"'
                }
            }
        }

        stage('Test') {
            steps {
                dir('06-advanced-project') {
                    sh 'bash -l -c "poetry run pytest"'
                }
            }
        }
    }
}
