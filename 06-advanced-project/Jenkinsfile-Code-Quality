pipeline {
    agent any

    environment {
        // You can add environment variables here if needed
        PATH = "${env.PATH}:/var/lib/jenkins/.local/share/pypoetry/venv/bin"
    }

    stages {

        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Setup') {
            steps {
                dir('06-advanced-project') {
                    echo "Installing dependencies with Poetry..."
                    sh 'poetry install --with dev'
                }
            }
        }

        stage('Test') {
            steps {
                dir('06-advanced-project') {
                    echo "Running tests with Poetry..."
                    sh 'poetry run pytest'
                }
            }
        }

        stage('Other Steps') {
            steps {
                echo "You can add other stages here like Code Quality, Linting, or Deployment"
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for details.'
        }
    }
}
