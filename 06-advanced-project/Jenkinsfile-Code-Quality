pipeline {
    agent any

    environment {
        // Poetry binary path (installed for jenkins user)
        POETRY = "/var/lib/jenkins/.local/bin/poetry"
    }

    stages {
        stage('Checkout') {
            steps {
                // Pull the repo
                checkout scm
                sh 'ls -la'
            }
        }

        stage('Setup') {
            steps {
                // Install dependencies (including dev)
                sh "${POETRY} install --with dev"
            }
        }

        stage('Code Quality') {
            steps {
                // Example code quality tools - adjust if needed
                sh "${POETRY} run flake8 ."
                sh "${POETRY} run black --check ."
                sh "${POETRY} run pylint $(find . -name '*.py') || true"
            }
        }

        stage('Test') {
            steps {
                // Run tests
                sh "${POETRY} run pytest --maxfail=1 --disable-warnings -q"
            }
        }
    }

    post {
        always {
            echo "Pipeline finished!"
        }
        failure {
            echo "❌ Build failed"
        }
        success {
            echo "✅ Build passed"
        }
    }
}
