pipeline {
    agent any

    environment {
        // Add Poetry to PATH for Jenkins
        PATH = "/home/zesh/.local/bin:${env.PATH}"
    }

    stages {

        stage('Environment Variables') {
            steps {
                sh 'printenv'
                sh 'ls -la'
            }
        }

        stage('Pull Request Number') {
            when {
                expression { return false } // Skipping this stage for now
            }
            steps {
                echo "Skipping Pull Request Number stage"
            }
        }

        stage('Setup') {
            steps {
                echo "Installing dependencies with Poetry..."
                sh 'poetry install --with dev'
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                sh 'poetry run pytest'
            }
        }

    }

    post {
        success {
            echo "Pipeline finished successfully!"
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
