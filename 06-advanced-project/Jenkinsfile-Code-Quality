pipeline {
    agent any

    environment {
        PATH = "/var/lib/jenkins/.local/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                sh 'ls -la'
                sh 'which poetry || echo "Poetry not in PATH"'
                sh 'poetry --version'
            }
        }

        stage('Setup') {
            steps {
                sh 'poetry install --with dev'
            }
        }

        stage('Code Quality') {
            steps {
                sh 'poetry run flake8 .'
                sh 'poetry run black --check .'
                sh 'poetry run pylint $(find . -name "*.py") || true'
            }
        }

        stage('Test') {
            steps {
                sh 'poetry run pytest --maxfail=1 --disable-warnings -q'
            }
        }
    }

    post {
        always {
            echo "Pipeline finished!"
        }
    }
}
