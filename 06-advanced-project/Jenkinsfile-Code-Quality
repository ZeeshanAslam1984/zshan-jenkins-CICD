pipeline {
    agent any
    environment {
        // Append Poetry's bin directory to PATH
        PATH+POETRY = "/var/lib/jenkins/.local/share/pypoetry/venv/bin"
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout happens automatically via Jenkins SCM, no changes needed
                echo "Checking out the repository..."
            }
        }

        stage('Setup') {
            steps {
                dir('06-advanced-project') {
                    echo "Installing dependencies using Poetry..."
                    sh 'poetry install --with dev'
                }
            }
        }

        stage('Test') {
            steps {
                dir('06-advanced-project') {
                    echo "Running tests using Poetry..."
                    sh 'poetry run pytest'
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for errors.'
        }
    }
}
