pipeline {
    agent any

    environment {
        PATH = "/var/lib/jenkins/.local/bin:$PATH" // ensure Poetry is on PATH
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup') {
    steps {
        dir('06-advanced-project') {
            sh '/var/lib/jenkins/.local/bin/poetry install --with dev'
        }
    }
}

And for the Test stage:

stage('Test') {
    steps {
        dir('06-advanced-project') {
            sh '/var/lib/jenkins/.local/bin/poetry run pytest'
        }
    }
}
    }
}
