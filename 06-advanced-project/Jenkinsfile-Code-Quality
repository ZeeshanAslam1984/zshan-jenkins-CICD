pipeline {
    agent any

    environment {
        // Add Poetry to PATH so Jenkins can find it
        PATH = "/var/lib/jenkins/.local/bin:${env.PATH}"
    }

    stages {
        stage('Environment Variables') {
            steps {
                sh 'printenv'
                sh 'ls -la'
            }
        }

        stage('Setup') {
            steps {
                sh 'poetry install --with dev'
            }
        }

        stage('Test') {
            steps {
                sh 'poetry run pytest'
            }
        }
    }
}
