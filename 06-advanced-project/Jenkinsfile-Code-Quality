pipeline {
    agent any

    environment {
        PATH = "/var/lib/jenkins/.local/bin:$PATH" // ensure Poetry is on PATH
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup') {
            steps {
                dir('06-advanced-project') {   // <- change to your project folder
                    sh 'poetry install --with dev'
                }
            }
        }

        stage('Test') {
            steps {
                dir('06-advanced-project') {   // <- run tests in project folder
                    sh 'poetry run pytest'
                }
            }
        }
    }
}
