pipeline {
    agent any

    environment {
        IMAGE_NAME = 'zeeshanaslam1984/zshan-jenkins-docker-flask-app'
        IMAGE_TAG = "${IMAGE_NAME}:${env.GIT_COMMIT}"
        AWS_ACCESS_KEY_ID = credentials('aws-access-key')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-key')
    }

    stages {
        stage('Setup Kubeconfig') {
            steps {
                withCredentials([string(credentialsId: 'kubeconfig-content', variable: 'KUBECONFIG_CONTENT')]) {
                    sh '''
                        mkdir -p /var/lib/jenkins/.kube
                        echo "$KUBECONFIG_CONTENT" > /var/lib/jenkins/.kube/config
                        chown -R jenkins:jenkins /var/lib/jenkins/.kube
                        chmod 600 /var/lib/jenkins/.kube/config
                    '''
                }
            }
        }

        stage('Deploy Example') {
            steps {
                sh '''
                    export KUBECONFIG=/var/lib/jenkins/.kube/config
                    kubectl get nodes
                '''
            }
        }
    }
}
